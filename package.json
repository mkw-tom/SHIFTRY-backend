{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": "server.js",
	"scripts": {
		"start": "dotenv -e .env -- node dist/server.js",
		"dev": "dotenv -e .env.test -- node dist/server.js",
		"build": "tsc",
		"test": "cross-env NODE_ENV=test dotenv -e .env.test -- jest --coverage",
		"test:unit": "cross-env NODE_ENV=test jest --testPathPattern=tests/unit --coverage",
		"test:integration": "cross-env NODE_ENV=test jest --testPathPattern=tests/integration",
		"biome": "npx @biomejs/biome check --write ./src",
		"biome:fix": "npx @biomejs/biome check  --fix --unsafe ./src",
		"type-check": "npx tsc --noEmit",
		"generate": "npx prisma generate",
		"generate:test": "cross-env DATABASE_URL=$(cat .env.test | grep DATABASE_URL | cut -d '=' -f2) npx prisma generate",
		"migrate:prod": "dotenv -e .env -- npx prisma migrate deploy",
		"migrate:test": "dotenv -e .env.test -- npx prisma migrate dev",
		"studio:prod": "dotenv -e .env -- npx prisma studio",
		"studio:test": "dotenv -e .env.test -- npx prisma studio"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@prisma/client": "^6.4.1",
		"axios": "^1.8.1",
		"cors": "^2.8.5",
		"express": "^4.21.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.5",
		"@types/supertest": "^6.0.2",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.7",
		"jest": "^29.7.0",
		"nodemon": "^3.1.9",
		"prisma": "^6.4.1",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.3"
	}
}
